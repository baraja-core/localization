{
	"name": "baraja-core/localization",
	"description": "Common package for language manipulation.",
	"homepage": "https://github.com/baraja-core/localization",
	"authors": [
		{
			"name": "Jan Barášek",
			"homepage": "https://baraja.cz"
		}
	],
	"require": {
		"php": "^8.0",
		"nette/di": "^3.0",
		"nette/utils": "^3.0",
		"nette/caching": "^3.0",
		"nette/http": "^3.0",
		"baraja-core/doctrine": "^3.0"
	},
	"require-dev": {
		"baraja-core/package-manager": "^3.0",
		"phpstan/phpstan": "^0.12.74",
		"tracy/tracy": "^2.8",
		"phpstan/phpstan-nette": "^0.12.14",
		"spaze/phpstan-disallowed-calls": "^1.1",
		"roave/security-advisories": "dev-master"
	},
	"autoload": {
		"classmap": [
			"src/"
		],
		"files": [
			"src/task_autoload.php"
		]
	},
	"scripts": {
		"phpstan": [
			"vendor/bin/phpstan analyse src -c phpstan.neon --level 8 --no-progress"
		]
	},
	"minimum-stability": "stable"
}
